#include <iostream>
#include <string>
using namespace std;


int main() {

	int tipUtilizator; //folosim variabila tipUtilizator pentru a determina pe ce ramura sa continue programul


selectUtilizator: //label de reincepere selectie daca utilizatorul da alta valoare in afara de 1 si 2

	cout << "Selectati tipul de utilizator( 1 - magazin, 2 - client): ";
		cin >> tipUtilizator; //introducere variabila

	if (tipUtilizator >= 1 && tipUtilizator <= 2) //conditii continuare
	{
		cout << "Utilizator corect";
	}
	else
	{
		cout << "Utilizator incorect, reintrodu utilizatorul" << endl;
		goto selectUtilizator;
	}


	cout << endl;
	cout << tipUtilizator << endl;

	if (tipUtilizator = 1)
	{
		cout << "Utilizatorul ales este: 'magazin'";
	}
	
	if(tipUtilizator = 2)
	{
		cout << "Utilizatorul ales este: 'client'";
	}

	return 0;
}
